<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background3"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/background_light"
        android:clickable="false"
        android:cursorVisible="true"
        android:textSize="25dp"
        android:maxLength="9"
        android:ems="10"
        android:hint="  Enter Number to Calculate"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/button1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/editText"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_button_corners"
        android:text="1"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/editText"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/button1"
        android:background="@drawable/rounded_button_corners"
        android:text="2"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/editText"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/button2"
        android:background="@drawable/rounded_button_corners"
        android:text="3"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/editText"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/button3"
        android:background="@drawable/rounded_corner_for_operators"
        android:text="+"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/button1"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_button_corners"
        android:text="4"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/button2"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/button1"
        android:background="@drawable/rounded_button_corners"
        android:text="5"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/button3"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/button2"
        android:background="@drawable/rounded_button_corners"
        android:text="6"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_sub"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/button_plus"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/button6"
        android:background="@drawable/rounded_corner_for_operators"
        android:text="-"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/button4"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_button_corners"
        android:text="7"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/button5"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/button1"
        android:background="@drawable/rounded_button_corners"
        android:text="8"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/button6"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/button2"
        android:background="@drawable/rounded_button_corners"
        android:text="9"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_multi"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/button_sub"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/button6"
        android:background="@drawable/rounded_corner_for_operators"
        android:text="*"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_dot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/button7"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button_corners"
        android:text="."
        android:textSize="30dp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/button8"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/button1"
        android:background="@drawable/rounded_button_corners"
        android:text="0"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_equals"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/button9"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/button2"
        android:background="@drawable/rounded_button_corners"
        android:text="="
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_div"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/button_multi"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@id/button6"
        android:background="@drawable/rounded_corner_for_operators"
        android:text="/"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_below="@id/button_dot"
        android:layout_marginLeft="30dp"
        android:background="@drawable/round_corner_for_deleteandclear"
        android:text="DELETE"
        android:textColor="@android:color/white"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_below="@id/button_div"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/button_delete"
        android:background="@drawable/round_corner_for_deleteandclear"
        android:text="CLEAR"
        android:textColor="@android:color/white"
        android:textSize="30dp"></Button>

</RelativeLayout>